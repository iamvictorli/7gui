{
  "extends": "@7gui/typescript-config/tsconfig.json",
  "compilerOptions": {

    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "paths": {
      "~/*": ["./src/*"]
    },
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
